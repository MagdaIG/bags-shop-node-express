    <!-- Scripts personalizados -->
    <script>
        // Función para mostrar alertas
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : type === 'danger' ? 'danger' : type === 'warning' ? 'warning' : 'info'} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }

        function deleteUser(userId, userName) {
            document.getElementById('userName').textContent = userName;
            document.getElementById('deleteForm').action = '/api/usuarios/' + userId;

            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Cargar usuarios al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            loadUsers();

            // Manejar respuesta de eliminación
            document.getElementById('deleteForm').addEventListener('submit', function(e) {
                e.preventDefault();

                const form = this;
                const formData = new FormData(form);

                fetch(form.action, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('Usuario eliminado exitosamente', 'success');
                        setTimeout(() => {
                            loadUsers(); // Recargar la tabla
                        }, 1500);
                    } else {
                        showAlert('Error al eliminar usuario: ' + data.message, 'danger');
                    }
                })
                .catch(error => {
                    showAlert('Error al eliminar usuario', 'danger');
                    console.error('Error:', error);
                });

                const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                modal.hide();
            });
        });

        function loadUsers() {
            fetch('/api/usuarios')
                .then(response => response.json())
                .then(data => {
                    const tbody = document.getElementById('usersTableBody');

                    if (data.success && data.data && data.data.length > 0) {
                        tbody.innerHTML = data.data.map(user => `
                            <tr>
                                <td>
                                    <span class="badge badge-primary-custom badge-custom">#${user.id}</span>
                                </td>
                                <td>
                                    <strong>${user.nombre}</strong>
                                </td>
                                <td>
                                    <a href="mailto:${user.email}" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i>
                                        ${user.email}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge badge-success-custom badge-custom">
                                        ${user.pedidos ? user.pedidos.length : 0}
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        ${new Date(user.createdAt).toLocaleDateString('es-ES')}
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/usuarios/${user.id}/pedidos"
                                           class="btn btn-success-custom btn-custom btn-sm"
                                           title="Ver pedidos">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                        <a href="/usuarios/${user.id}/editar"
                                           class="btn btn-warning-custom btn-custom btn-sm"
                                           title="Editar usuario">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-danger-custom btn-custom btn-sm"
                                                onclick="deleteUser(${user.id}, '${user.nombre}')"
                                                title="Eliminar usuario">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `).join('');
                    } else {
                        tbody.innerHTML = `
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No hay usuarios registrados</h5>
                                    <p class="text-muted">Crea el primer usuario para comenzar</p>
                                    <a href="/usuarios/crear" class="btn btn-primary-custom btn-custom">
                                        <i class="fas fa-user-plus me-2"></i>
                                        Crear Usuario
                                    </a>
                                </td>
                            </tr>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error al cargar usuarios:', error);
                    showAlert('Error al cargar usuarios', 'danger');
                });
        }
    </script>
