<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Handmade Bags Store</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Tema personalizado -->
    <link href="/css/theme.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-shopping-bag me-2"></i>
                Handmade Bags Store
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i>
                            Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/usuarios">
                            <i class="fas fa-users me-1"></i>
                            Usuarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pedidos">
                            <i class="fas fa-shopping-cart me-1"></i>
                            Pedidos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos">
                            <i class="fas fa-gem me-1"></i>
                            Productos
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-plus me-1"></i>
                            Crear
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/usuarios/crear">
                                <i class="fas fa-user-plus me-2"></i>Nuevo Usuario
                            </a></li>
                            <li><a class="dropdown-item" href="/pedidos/crear">
                                <i class="fas fa-cart-plus me-2"></i>Nuevo Pedido
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main style="margin-top: 80px;">
        <!-- Header -->
        <div class="container mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="text-gradient">
                                <i class="fas fa-shopping-cart me-2"></i>
                                <%= title %>
                            </h1>
                            <p class="text-muted">Pedidos del usuario <%= user.nombre %></p>
                        </div>
                        <a href="/usuarios" class="btn btn-secondary btn-custom">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver a Usuarios
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información del usuario -->
        <div class="container mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-custom">
                        <div class="card-body-custom">
                            <h5><i class="fas fa-user me-2"></i>Información del Cliente</h5>
                            <p><strong>Nombre:</strong> <%= user.nombre %></p>
                            <p><strong>Email:</strong> <%= user.email %></p>
                            <p><strong>Total de pedidos:</strong> <span class="badge badge-primary-custom badge-custom"><%= orders.length %></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de pedidos -->
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-custom">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                    <th><i class="fas fa-shopping-bag me-1"></i>Producto</th>
                                    <th><i class="fas fa-sort-numeric-up me-1"></i>Cantidad</th>
                                    <th><i class="fas fa-calendar me-1"></i>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orders && orders.length > 0) { %>
                                    <% orders.forEach(order => { %>
                                    <tr>
                                        <td>
                                            <span class="badge badge-primary-custom badge-custom">#<%= order.id %></span>
                                        </td>
                                        <td>
                                            <strong><%= order.producto %></strong>
                                        </td>
                                        <td>
                                            <span class="badge badge-success-custom badge-custom">
                                                <%= order.cantidad %>
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(order.fecha_pedido).toLocaleDateString('es-ES') %>
                                            </small>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                            <h5 class="text-muted">No hay pedidos para este usuario</h5>
                                            <p class="text-muted">Este usuario aún no ha realizado pedidos</p>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-shopping-bag me-2"></i>Handmade Bags Store</h5>
                    <p class="mb-0">Tienda online de handmade bags con gestión completa de usuarios y pedidos. <strong>Cada producto es único y hecho a mano</strong>.</p>
                </div>
                <div class="col-md-4 text-center">
                    <h6 class="mb-3">Magdalena Inalaf G.</h6>
                    <p class="mb-2">Desarrolladora Fullstack</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="https://www.linkedin.com/in/minalaf/" target="_blank" class="btn btn-outline-light btn-sm">
                            <i class="fab fa-linkedin me-1"></i>LinkedIn
                        </a>
                        <a href="https://github.com/MagdaIG" target="_blank" class="btn btn-outline-light btn-sm">
                            <i class="fab fa-github me-1"></i>GitHub
                        </a>
                        <a href="https://inalaf.ca/" target="_blank" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-globe me-1"></i>Portfolio
                        </a>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <p class="mb-0">
                        <i class="fas fa-code me-1"></i>
                        Desarrollado con Node.js, Express, Sequelize y Bootstrap 5
                    </p>
                    <small>&copy; 2024 Todos los derechos reservados.</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts personalizados -->
    <script>
        // Función para mostrar alertas
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : type === 'danger' ? 'danger' : type === 'warning' ? 'warning' : 'info'} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }
    </script>
</body>
</html>
