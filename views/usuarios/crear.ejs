    <!-- Scripts personalizados -->
    <script>
        // Función para mostrar alertas
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : type === 'danger' ? 'danger' : type === 'warning' ? 'warning' : 'info'} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('userForm');
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');

            // Validación en tiempo real
            function validateField(field, validator) {
                const isValid = validator(field.value);
                field.classList.toggle('is-valid', isValid);
                field.classList.toggle('is-invalid', !isValid);
                return isValid;
            }

            // Validadores
            const validators = {
                nombre: (value) => value.length >= 2 && value.length <= 60 && /^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$/.test(value),
                email: (value) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value) && value.length <= 100,
                password: (value) => value.length >= 8 && /\d/.test(value) && /[a-zA-Z]/.test(value),
                confirmPassword: (value) => value === password.value && value.length > 0
            };

            // Event listeners para validación en tiempo real
            Object.keys(validators).forEach(fieldName => {
                const field = document.getElementById(fieldName);
                if (field) {
                    field.addEventListener('blur', () => validateField(field, validators[fieldName]));
                    field.addEventListener('input', () => {
                        if (field.classList.contains('is-invalid') || field.classList.contains('is-valid')) {
                            validateField(field, validators[fieldName]);
                        }
                    });
                }
            });

            // Validación especial para confirmar contraseña
            password.addEventListener('input', () => {
                if (confirmPassword.value) {
                    validateField(confirmPassword, validators.confirmPassword);
                }
            });

            // Envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                // Validar todos los campos
                let isValid = true;
                Object.keys(validators).forEach(fieldName => {
                    const field = document.getElementById(fieldName);
                    if (field && !validateField(field, validators[fieldName])) {
                        isValid = false;
                    }
                });

                if (!isValid) {
                    showAlert('Por favor, corrige los errores en el formulario', 'warning');
                    return;
                }

                // Preparar datos
                const formData = {
                    nombre: document.getElementById('nombre').value.trim(),
                    email: document.getElementById('email').value.trim(),
                    password: document.getElementById('password').value
                };

                // Enviar petición
                fetch('/api/usuarios', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(data => {
                            throw new Error(data.message || 'Error del servidor');
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        showAlert('Usuario creado exitosamente', 'success');
                        setTimeout(() => {
                            window.location.href = '/usuarios';
                        }, 1500);
                    } else {
                        if (data.errors) {
                            // Mostrar errores de validación
                            data.errors.forEach(error => {
                                const field = document.getElementById(error.path || error.field);
                                if (field) {
                                    field.classList.add('is-invalid');
                                    const feedback = field.nextElementSibling;
                                    if (feedback && feedback.classList.contains('invalid-feedback')) {
                                        feedback.textContent = error.msg || error.message;
                                    }
                                }
                            });
                            showAlert('Por favor, corrige los errores en el formulario', 'warning');
                        } else {
                            showAlert('Error al crear usuario: ' + data.message, 'danger');
                        }
                    }
                })
                .catch(error => {
                    if (error.message.includes('ya está registrado') || error.message.includes('duplicate')) {
                        const emailField = document.getElementById('email');
                        emailField.classList.add('is-invalid');
                        const feedback = emailField.nextElementSibling;
                        if (feedback && feedback.classList.contains('invalid-feedback')) {
                            feedback.textContent = 'Este email ya está registrado';
                        }
                        showAlert('Este email ya está registrado. Por favor, usa otro email.', 'warning');
                    } else {
                        showAlert('Error al crear usuario: ' + error.message, 'danger');
                    }
                    console.error('Error:', error);
                });
            });
        });
    </script>
