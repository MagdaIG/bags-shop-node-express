<%- include('layout', { title: title, body: `
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-custom text-center">
                <div class="card-header-custom">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Error ${error.status || 500}
                    </h3>
                </div>
                <div class="card-body-custom">
                    <i class="fas fa-bug fa-4x text-gradient mb-4"></i>
                    <h4 class="text-gradient mb-3">¡Ups! Algo salió mal</h4>
                    <p class="text-muted mb-4">
                        ${error.message || 'Ha ocurrido un error inesperado. Por favor, intenta nuevamente.'}
                    </p>

                    <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
                    <div class="alert alert-warning-custom alert-custom text-start">
                        <h6><i class="fas fa-code me-2"></i>Detalles del Error:</h6>
                        <pre class="mb-0 small">${error.stack}</pre>
                    </div>
                    <% } %>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/" class="btn btn-primary-custom btn-custom">
                            <i class="fas fa-home me-2"></i>
                            Ir al Inicio
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary btn-custom">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver Atrás
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %>
