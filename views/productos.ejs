    <script>
        // Función para mostrar alertas
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : type === 'danger' ? 'danger' : type === 'warning' ? 'warning' : 'info'} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }

        // Función de búsqueda mejorada
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            const productContainers = document.querySelectorAll('#productsContainer .col-lg-4, #productsContainer .col-md-6');
            const searchResults = document.getElementById('searchResults');
            const resultsCount = document.getElementById('resultsCount');
            let visibleCount = 0;

            if (searchTerm === '') {
                // Si no hay término de búsqueda, mostrar todos los productos
                productContainers.forEach(container => {
                    container.style.display = 'flex';
                });
                searchResults.style.display = 'none';
                return;
            }

            productContainers.forEach(container => {
                const productName = container.getAttribute('data-name').toLowerCase();
                const productCategory = container.getAttribute('data-category').toLowerCase();

                // Buscar también en el título y descripción del producto
                const productTitle = container.querySelector('.product-title');
                const productDescription = container.querySelector('.product-description');

                const titleText = productTitle ? productTitle.textContent.toLowerCase() : '';
                const descriptionText = productDescription ? productDescription.textContent.toLowerCase() : '';

                // Buscar en todos los campos
                if (productName.includes(searchTerm) ||
                    productCategory.includes(searchTerm) ||
                    titleText.includes(searchTerm) ||
                    descriptionText.includes(searchTerm)) {
                    container.style.display = 'flex';
                    visibleCount++;
                } else {
                    container.style.display = 'none';
                }
            });

            // Mostrar contador de resultados
            resultsCount.textContent = visibleCount;
            searchResults.style.display = 'block';
        });

        // Animación de entrada escalonada
        document.addEventListener('DOMContentLoaded', function() {
            const containers = document.querySelectorAll('#productsContainer .col-lg-4, #productsContainer .col-md-6');
            containers.forEach((container, index) => {
                const card = container.querySelector('.product-card');
                if (card) {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';

                    setTimeout(() => {
                        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, index * 100);
                }
            });
        });
    </script>
