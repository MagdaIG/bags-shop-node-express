    <!-- Scripts personalizados -->
    <script>
        // Función para mostrar alertas
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : type === 'danger' ? 'danger' : type === 'warning' ? 'warning' : 'info'} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('orderForm');
            const productoSelect = document.getElementById('producto');
            const productoPersonalizado = document.getElementById('productoPersonalizado');

            // Cargar usuarios
            loadUsers();

            // Validación en tiempo real
            function validateField(field, validator) {
                const isValid = validator(field.value);
                field.classList.toggle('is-valid', isValid);
                field.classList.toggle('is-invalid', !isValid);
                return isValid;
            }

            // Validadores
            const validators = {
                usuario_id: (value) => value !== '',
                producto: (value) => value !== '' || productoPersonalizado.value.trim() !== '',
                cantidad: (value) => parseInt(value) >= 1 && parseInt(value) <= 100,
                precio_unitario: (value) => value === '' || parseFloat(value) >= 0
            };

            // Event listeners para validación en tiempo real
            Object.keys(validators).forEach(fieldName => {
                const field = document.getElementById(fieldName);
                if (field) {
                    field.addEventListener('blur', () => validateField(field, validators[fieldName]));
                    field.addEventListener('input', () => {
                        if (field.classList.contains('is-invalid') || field.classList.contains('is-valid')) {
                            validateField(field, validators[fieldName]);
                        }
                    });
                }
            });

            // Validación especial para producto personalizado
            productoPersonalizado.addEventListener('input', () => {
                if (productoPersonalizado.value.trim() !== '') {
                    productoSelect.classList.remove('is-invalid');
                    productoSelect.classList.add('is-valid');
                } else {
                    validateField(productoSelect, validators.producto);
                }
            });

            // Envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                // Validar todos los campos
                let isValid = true;
                Object.keys(validators).forEach(fieldName => {
                    const field = document.getElementById(fieldName);
                    if (field && !validateField(field, validators[fieldName])) {
                        isValid = false;
                    }
                });

                if (!isValid) {
                    showAlert('Por favor, corrige los errores en el formulario', 'warning');
                    return;
                }

                // Preparar datos
                const formData = {
                    usuario_id: parseInt(document.getElementById('usuario_id').value),
                    producto: productoPersonalizado.value.trim() || document.getElementById('producto').value,
                    cantidad: parseInt(document.getElementById('cantidad').value),
                    precio_unitario: document.getElementById('precio_unitario').value ? parseFloat(document.getElementById('precio_unitario').value) : null,
                    fecha_pedido: document.getElementById('fecha_pedido').value
                };

                // Enviar petición
                fetch('/api/pedidos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('Pedido creado exitosamente', 'success');
                        setTimeout(() => {
                            window.location.href = '/pedidos';
                        }, 1500);
                    } else {
                        if (data.errors) {
                            // Mostrar errores de validación
                            data.errors.forEach(error => {
                                const field = document.getElementById(error.path || error.field);
                                if (field) {
                                    field.classList.add('is-invalid');
                                    const feedback = field.nextElementSibling;
                                    if (feedback && feedback.classList.contains('invalid-feedback')) {
                                        feedback.textContent = error.msg || error.message;
                                    }
                                }
                            });
                            showAlert('Por favor, corrige los errores en el formulario', 'warning');
                        } else {
                            showAlert('Error al crear pedido: ' + data.message, 'danger');
                        }
                    }
                })
                .catch(error => {
                    showAlert('Error al crear pedido', 'danger');
                    console.error('Error:', error);
                });
            });
        });

        function loadUsers() {
            fetch('/api/usuarios')
                .then(response => response.json())
                .then(data => {
                    const select = document.getElementById('usuario_id');

                    if (data.success && data.data && data.data.length > 0) {
                        select.innerHTML = '<option value="">Selecciona un cliente</option>' +
                            data.data.map(user => `<option value="${user.id}">${user.nombre} (${user.email})</option>`).join('');
                    } else {
                        select.innerHTML = '<option value="">No hay usuarios registrados</option>';
                        select.disabled = true;
                    }
                })
                .catch(error => {
                    console.error('Error al cargar usuarios:', error);
                    showAlert('Error al cargar usuarios', 'danger');
                });
        }
    </script>
